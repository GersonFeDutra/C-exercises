{
	"version": "2.0.0",
	"tasks": [
		{
			// Task para invocar a compilação do SCons no terminal do VsCode
			"label": "SCons Build",
			"command": "scons",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"group": "build",
			"problemMatcher": "$msCompile"
		}
	]
}
